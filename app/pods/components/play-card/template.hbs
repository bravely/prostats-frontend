<div class="play">
  {{#link-to 'player.show' play.player.id}}
  <span class="teamAcronym">{{play.team.acronym}}</span>.
  <b>
    <span class="name">{{play.player.handle}}</span>
  </b>
  {{/link-to}} |
  <span>{{play.position}}</span> -
  {{play.kills}} / {{play.deaths}} / {{play.assists}}
  <br>
  <i >
    <span class="totalGold">{{play.totalGold}}g</span> |
    <span class="minionsKilled">{{play.minionsKilled}}cs</span>
  </i>
</div>
